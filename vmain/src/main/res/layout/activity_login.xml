<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/main_bg_color"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo_img"
            android:src="@drawable/ic_app_logo"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_black_r90_bg"
            android:padding="@dimen/dp_15"
            android:id="@+id/name_lin"
            app:layout_constraintTop_toBottomOf="@+id/logo_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="账号:"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/normal_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/normal_text_hint_color"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="请输入账号"
                android:text="qinyue"
                android:imeOptions="actionNext"
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pwd_lin"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/normal_text_color"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_black_r90_bg"
            android:padding="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/name_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="密码:"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/normal_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:text="qwewasd102453."
                android:layout_marginLeft="@dimen/dp_10"
                android:textColorHint="@color/normal_text_hint_color"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/normal_text_color"
                android:hint="请输入密码"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:id="@+id/pwd_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/but"
            android:padding="@dimen/dp_15"
            android:textColor="@color/normal_text_color"
            android:text="登录/注册"
            android:background="@drawable/main_but_bg"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@id/pwd_lin"
            android:minWidth="@dimen/dp_0"
            android:minHeight="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>